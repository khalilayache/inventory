<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="90dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/item_list_placeholder"
        tools:scrCompat="@drawable/item_list_placeholder"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/item_image"
        android:layout_toStartOf="@id/item_stock"
        android:maxLines="1"
        tools:text="Product name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"/>

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_price"
        android:layout_below="@id/item_name"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/item_image"
        android:layout_toStartOf="@id/item_buy"
        android:scrollbars="none"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Product description"
        android:textSize="12sp"
        android:textAppearance="?android:textAppearanceSmall"/>

    <TextView
        android:id="@+id/item_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/item_buy"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:maxLines="1"
        tools:text="Qty: ###"
        android:textSize="12sp"
        android:textAppearance="?android:textAppearanceSmall"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/item_image"
        android:textAlignment="gravity"
        android:gravity="bottom"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        tools:text="R$ ##.##"
        android:textSize="14sp"
        android:textAppearance="?android:textAppearance"/>

    <ImageView
        android:id="@+id/item_buy"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:maxWidth="100dp"
        android:minHeight="50dp"
        android:maxHeight="100dp"
        android:minWidth="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/buy_basket"
        android:contentDescription="@null"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>

