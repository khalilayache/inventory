<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:paddingTop="8dp"
      android:paddingBottom="16dp">

    <!-- region Title -->
    <TextView
        android:id="@+id/suplier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_image"
        android:layout_toStartOf="@id/item_stock"
        android:text="@string/supplier"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view_title_line"
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:layout_below="@id/suplier_title"
        android:layout_marginTop="8dp"
        android:background="#44000000"/>
    <!-- endregion Title -->

    <!-- region Name -->
    <TextView
        android:id="@+id/view_supplier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_title_line"
        android:layout_marginTop="16dp"
        android:text="@string/name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/supplier_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_supplier_name"
        android:padding="8dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:minLines="1"
        android:lines="1"
        tools:text="Testando"
        android:background="@drawable/edit_text_background"
        android:inputType="text"
        tools:ignore="LabelFor"/>

    <!-- endregion Title -->

    <!-- region Email -->
    <TextView
        android:id="@+id/view_supplier_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/supplier_name"
        android:layout_marginTop="8dp"
        android:text="@string/email"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/supplier_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_supplier_email"
        android:padding="8dp"
        android:textSize="16sp"
        android:maxLines="1"
        tools:text="Testando"
        android:background="@drawable/edit_text_background"
        android:inputType="textEmailAddress"
        tools:ignore="LabelFor"/>

    <!-- endregion Email-->

    <!-- region Phone -->
    <TextView
        android:id="@+id/view_supplier_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/supplier_email"
        android:layout_marginTop="8dp"
        android:text="@string/phone"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/supplier_phone"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_supplier_phone"
        android:padding="8dp"
        android:textSize="16sp"
        tools:text="+55 (11) 91234-1234"
        android:background="@drawable/edit_text_background"
        android:inputType="phone"
        tools:ignore="LabelFor"/>

    <!-- endregion Phone -->

    <!-- region Order Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/supplier_phone"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:background="@drawable/order_more_button_background"
        android:clickable="true"
        android:focusable="true">

      <TextView
          android:id="@+id/order_more_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/order_more"
          android:textSize="18sp"
          android:textStyle="bold"/>

    </LinearLayout>

    <!-- endregion -->

  </RelativeLayout>

</android.support.v7.widget.CardView>
